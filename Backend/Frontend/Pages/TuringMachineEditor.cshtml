@page
@model Frontend.Pages.TuringMachineEditorModel
@{

}

<style>
    .modern-listbox {
        width: 50%; /* Adjust the width as needed */
        padding: 20px;
        font-size: 24px;
        border: 5px solid #3498db;
        border-radius: 5px;
        box-shadow: 0 0 5px rgba(52, 152, 219, 0.5);
        background-color: #ecf0f1;
    }

    .modern-button {
        padding: 10px;
        font-size: 16px;
        background-color: #2ecc71;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .modern-button:hover {
            background-color: #27ae60;
        }
</style>

<div class="text-center">
    <h1>Turing Machine Challenges</h1>
    <form method="post" asp-page="SelectChallenge" id="selectChallengeForm">
    
        <div>
        <select id="challengeListBox" style="width=50%;" name="challengeId" multiple class="modern-listbox">
        @foreach (var challenge in Model.Challenges)
        {
            <option value="@challenge.Id">@challenge.Name</option>
        }
        </select>
            </div>
    
        <button type="button" onclick="selectChallenge()" class="modern-button">Select Challenge</button>
    </form>
</div>
<script>
    function selectChallenge() {
        var listBox = document.getElementById('challengeListBox');
        var selectedChallengeId = listBox.value;

        if (!selectedChallengeId) {
            alert('Please select a challenge before clicking "Select Challenge".');
        }
        else {
            document.getElementById('selectChallengeForm').submit();
        }
    }
</script>